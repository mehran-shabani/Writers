# Database Configuration
DATABASE_URL=postgresql://writers_user:writers_password@localhost:5432/writers_db
POSTGRES_USER=writers_user
POSTGRES_PASSWORD=writers_password
POSTGRES_DB=writers_db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Configuration
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Backend Configuration
BACKEND_URL=http://localhost:8000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Storage Configuration
UPLOAD_DIR=/var/lib/writers/uploads

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Monitoring Configuration
PROMETHEUS_ENABLED=true
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change-this-in-production

# SSL Configuration (for production)
DOMAIN=yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com

# System Resources (for alerts)
MEMORY_WARNING_THRESHOLD=85
MEMORY_CRITICAL_THRESHOLD=95
DISK_WARNING_THRESHOLD=80
DISK_CRITICAL_THRESHOLD=90
GPU_TEMP_WARNING=80
GPU_TEMP_CRITICAL=90
